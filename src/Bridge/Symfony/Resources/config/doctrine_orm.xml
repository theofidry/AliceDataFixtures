<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fidry_alice_data_fixtures.persistence.persister"
                 alias="fidry_alice_data_fixtures.persistence.persister.object_manager_persister" />

        <service id="fidry_alice_data_fixtures.persistence.persister.object_manager_persister"
                 class="Fidry\AliceDataFixtures\Bridge\Doctrine\Persister\ObjectManagerPersister"
                 lazy="true">
            <argument type="service" id="doctrine" />
        </service>

        <service id="fidry_alice_data_fixtures.persistence.purger.orm_purger"
                 class="Fidry\AliceDataFixtures\Bridge\Doctrine\Purger\OrmPurger"
                 lazy="true">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>

        <service id="fidry_alice_data_fixtures.loader.persister"
                 class="Fidry\AliceDataFixtures\Loader\PersisterLoader"
                 lazy="true" >
            <argument type="service" id="fidry_alice_data_fixtures.loader.multipass_file" />
            <argument type="service" id="fidry_alice_data_fixtures.persistence.persister" />
            <!-- Processors are injected via a Compiler pass -->
        </service>

    </services>

</container>
