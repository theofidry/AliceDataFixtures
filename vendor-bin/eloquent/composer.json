{
    "autoload-dev": {
        "classmap": [
            "../../migrations"
        ]
    },
    "require-dev": {
        "illuminate/database": "*",
        "illuminate/filesystem": "*",
        "theofidry/composer-inheritance-plugin": "^1.2"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "wikimedia/composer-merge-plugin": true,
            "theofidry/composer-inheritance-plugin": true
        }
    }
}
