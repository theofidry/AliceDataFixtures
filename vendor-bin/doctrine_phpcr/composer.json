        "doctrine/persistence": "*",
        "doctrine/phpcr-odm": "*",
        "jackalope/jackalope-doctrine-dbal": "*",
        "symfony/console": "*",
        "symfony/var-exporter": "*",
        "theofidry/composer-inheritance-plugin": "^1.2"
    },
    "config": {
        "bin-dir": "bin",
